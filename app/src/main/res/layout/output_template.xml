<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/month_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Month"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/month_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:text="12"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/month_tag"
            app:layout_constraintStart_toStartOf="@+id/month_tag"
            app:layout_constraintTop_toBottomOf="@+id/month_tag" />

        <TextView
            android:id="@+id/loan_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="160dp"
            android:layout_marginTop="8dp"
            android:text="Remaining Loan: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/principal_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="100dp"
            android:text="Amount towards principal: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/interest_tag" />

        <TextView
            android:id="@+id/principal_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="$12312.12"
            app:layout_constraintBottom_toBottomOf="@+id/principal_tag"
            app:layout_constraintStart_toEndOf="@+id/principal_tag"
            app:layout_constraintTop_toTopOf="@+id/principal_tag"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/interest_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="104dp"
            android:text="Amount towards interest: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loan_tag" />

        <TextView
            android:id="@+id/interest_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="$1231.12"
            app:layout_constraintBottom_toBottomOf="@+id/interest_tag"
            app:layout_constraintStart_toEndOf="@+id/interest_tag"
            app:layout_constraintTop_toTopOf="@+id/interest_tag"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/escrow_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="108dp"
            android:layout_marginBottom="8dp"
            android:text="Amount towards escrow: "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/principal_tag"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/escrow_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="$12323.23"
            app:layout_constraintBottom_toBottomOf="@+id/escrow_tag"
            app:layout_constraintStart_toEndOf="@+id/escrow_tag"
            app:layout_constraintTop_toTopOf="@+id/escrow_tag"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="$123123.12"
            app:layout_constraintBottom_toBottomOf="@+id/loan_tag"
            app:layout_constraintStart_toEndOf="@+id/loan_tag"
            app:layout_constraintTop_toTopOf="@+id/loan_tag"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>